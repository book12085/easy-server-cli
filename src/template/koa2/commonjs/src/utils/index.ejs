const os = require('os');

const getLocalAddress = () => {
    const nwi = os.networkInterfaces();
    for(let name in nwi) {
        const iFace = nwi[name];
        for(let i = 0; i < iFace.length; i++) {
            let item = iFace[i];
            if (item.family === 'IPv4' && item.address !== '127.0.0.1' && !item.internal) {
                return item.address;
            }
        }
    }
}

module.exports = {
    getLocalAddress,
};
