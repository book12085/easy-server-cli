{
    "globals": {
        "process": "readonly",
        "require": "writable"
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-empty": "error",
        "block-scoped-var": "error",
        "default-case": "warn",
        "dot-location": [2, "property"],
        "no-empty-function": "error",
        "no-implicit-globals": "error",
        "vars-on-top": "error",
        "global-require": "error",
        "comma-spacing": [2, {"before": false, "after": true}],
        "no-console": "warn",
        "eol-last": "warn",
        "camelcase": "error",
        "no-unused-vars": "error",
        "no-redeclare": "error"
    }
}
